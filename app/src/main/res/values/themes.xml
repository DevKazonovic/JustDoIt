<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTasks" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="backgroundColor">@color/light</item>
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/brande_variant</item>
        <item name="colorAccent">@color/brand</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/brand</item>
        <item name="colorSecondaryVariant">@color/brande_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/light_extra</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/light_red</item>

        <item name="colorDisable">@color/gray</item>
        <item name="colorDivider">@color/gray_200</item>
        <item name="colorStroke">@color/gray_200</item>
        <item name="colorTaskCard">@color/light_blue</item>
        <item name="colorInputFill">@color/light_extra</item>
        <item name="colorInputHint">@color/light_gray</item>
        <item name="colorLabel">@color/gray</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/Widget.App.BottomSheetDialog</item>
        <item name="toolbarStyle">@style/Widget.App.TopToolbar</item>
        <item name="colorControlNormal">?attr/colorPrimary</item>


        <item name="textAppearanceHeadline6">@style/TextAppearance.App.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.App.Overline</item>
        <item name="preferenceFragmentCompatStyle">@style/ThemeOverlay.Quizzer.PreferenceFragment
        </item>
    </style>
</resources>