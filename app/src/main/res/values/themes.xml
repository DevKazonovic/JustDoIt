<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTasks" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="backgroundColor">@color/light</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/brand</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brande_variant</item>
        <item name="colorSecondaryVariant">@color/brande_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/brand</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/backgroundColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->

        <item name="toolbarStyle">@style/Widget.App.TopToolbar</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout.OutlinedBox</item>
        <item name="bottomSheetDialogTheme">@style/Widget.App.BottomSheetDialog</item>

        <item name="colorControlNormal">?attr/colorPrimary</item>
    </style>
</resources>